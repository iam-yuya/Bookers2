<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">

    <!--部分テンプレートここから(User info)-->
    <%= render 'books/user_info', book: @book, user: @user %>
    <!--部分テンプレート-->

    <!--右側ここから-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>