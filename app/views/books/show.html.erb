<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">

    <!--部分テンプレート-->
    <%= render 'user_info', book: @book %>


    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td>
                <%= image_tag @book.user.get_profile_image(100,100) %>
                <%= @book.user.name %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>